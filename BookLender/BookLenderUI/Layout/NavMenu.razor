<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            BookLender 
            <i>
                <img src="Icons/book.svg" alt="Book Icon" style="width: 24px; height: 24px; filter: invert(1);">
            </i>
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link gap-3" href="" Match="NavLinkMatch.All">
                <i class="custom-icon">
                    <img src="Icons/home.svg" alt="Home Icon" style="width: 26px; height: 26px; vertical-align: middle; filter: invert(1)">
                </i>
                Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link gap-3" href="readers">
                <i class="custom-icon">
                    <img src="Icons/person.svg" alt="Reade Icon" style="width: 26px; height: 26px; vertical-align: middle; filter: invert(1)">
                </i>
                Readers
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link gap-3" href="books">
                <i class="custom-icon">
                    <img src="Icons/book_nav.svg" alt="Book Icon" style="width: 26px; height: 26px; vertical-align: middle; filter: invert(1)">
                </i>
                Books
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
